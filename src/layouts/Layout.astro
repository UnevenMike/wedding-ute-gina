---
import Navbar from "../components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Gina & Utkarsh" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta property="og:title" content="Gina & Utkarsh" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://gina-utkarsh.wedding/opg.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="600" />
    <title>{title}</title>
  </head>
  <body class="bg-wedding-cream font-normal">
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Allenoire";
    src: url("/fonts/Allenoire.woff");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Novecento";
    src: url("/fonts/NovecentoNarrowBold.woff");
    font-weight: bold;
    font-style: normal;
  }

  @font-face {
    font-family: "Novecento";
    src: url("/fonts/NovecentoNarrowBook.woff");
    font-weight: normal;
    font-style: normal;
  }
</style>
