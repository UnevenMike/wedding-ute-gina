  <div class="w-full mt-2">
    <div
      class="mx-auto px-4 max-w-[500px] flex font-plain text-wedding-purple items-center font-bold text-lf justify-around"
    >
      <div>
        Jabalpur, India <br />
        July 12-14 <br />
        2024
      </div>
      <div class="font-fancy text-4xl md:text-6xl text-center">&</div>
      <div class="text-right">
        Houston, Texas <br />
        September 1 <br />
        2024
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  #circle-container {
    width: 200px;
    transform: translateX(100px);
  }

  #cirle-text span {
    height: 75px;
    position: absolute;
    width: 10px;
    left: 0;
    top: 0;
    transform-origin: bottom center;
    transform: rotate(7.08deg);
    text-align: center;
  }
</style>

<script>
  var lettering = function (node: HTMLElement) {
    var str = node.textContent ?? "";
    if (!str) {
      return;
    }
    node.innerHTML = "";
    var openTag = "<span>";
    var closeTag = "</span>";
    var newHTML = openTag;
    var closeTags = closeTag;
    for (var i = 0, iCount = str.length; i < iCount; i++) {
      newHTML += str[i] + openTag;
      closeTags += closeTag;
    }
    node.innerHTML = newHTML + closeTags;
  };
  lettering(document.getElementById("cirle-text")!);
</script>
